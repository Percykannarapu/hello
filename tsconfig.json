{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "",
    "rootDir": "./",
    "outDir": "../out-tsc/app",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@val/common": ["./modules/common"],
      "@val/esri": ["./modules/esri"],
      "@val/messaging": ["./modules/messaging"],
      "@impower/*": ["./applications/impower"]
    }
  },
  "exclude": [
    "to-be-deleted"
  ]
}
